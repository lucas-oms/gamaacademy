			formacao = new Bacharelado(
					texto("Digite o nome do curso"),
					Integer.parseInt(texto("Digite o perído")),
					formacao.calcularMensalidade(double fator),
					formacao.definirDuracao(),
					String projetoConclusao,
					int cargaHorariaEstagio
					);
		}else if (resposta.equals("M")) {
			
		}else if (resposta.equals("T")) {
			
		}
		System.out.println(resposta);
	}

}
